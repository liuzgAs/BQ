<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/view_address" />

    <RelativeLayout
        android:id="@+id/viewNoAddress"
        android:layout_marginTop="@dimen/top"
        android:background="@drawable/layout_selector_white_system_gray"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/image0100"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/xinzengdizhi"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
        <TextView
            android:layout_below="@+id/image0100"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="新增地址"
            android:textSize="@dimen/normal_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageImg"
            android:layout_width="110dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/querenimg" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageImg"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="大脑雷达智力测试仪"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />

        <TextView
            android:id="@+id/textPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageImg"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_toRightOf="@id/imageImg"
            android:text="¥2880"
            android:textColor="@color/basicText"
            android:textSize="@dimen/bigText" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normalItemHeight"
        android:layout_marginTop="@dimen/top"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:text="数量："
            android:textSize="@dimen/normal_textsize" />

        <ImageView
            android:id="@+id/imageAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:src="@mipmap/add" />

        <EditText
            android:id="@+id/editNum"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/imageAdd"
            android:background="@drawable/shape_gray1dp"
            android:gravity="center"
            android:inputType="number"
            android:text="1"
            android:textSize="@dimen/litterText" />

        <ImageView
            android:id="@+id/imageDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/editNum"
            android:src="@mipmap/delete" />
    </RelativeLayout>
</LinearLayout>