<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray">

    <TextView
        android:text="Mind Link"
        android:textSize="@dimen/bigText"
        android:textColor="@color/light_black"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="15dp"
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/basic_color"
        android:background="@drawable/shape_basic01_1dp_25dp"
        android:textSize="@dimen/normal_textsize"
        android:text="已连接"
        android:layout_alignBaseline="@+id/textName"
        android:layout_toRightOf="@+id/textName"
        android:id="@+id/textStatue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textDes"
        android:textSize="@dimen/normal_textsize"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textName"
        android:text="5753434335343"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnLianJie"
        android:layout_marginRight="@dimen/leftAndRight"
        android:textColor="@color/white"
        android:textSize="@dimen/bigText"
        android:background="@color/basic_color"
        android:text="连接"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="30dp" />

</RelativeLayout>