<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sxmoc.bq.activity.XinXiTXActivity">

    <include layout="@layout/view_bar_white" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight">

            <TextView
                android:id="@+id/text0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="宝宝姓名"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/text0000"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="填写宝宝姓名"
                android:paddingRight="@dimen/leftAndRight"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/viewSex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight"
            android:background="@drawable/layout_selector_white_system_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="宝宝性别"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/textSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/image0100"
                android:gravity="right"
                android:hint="请选择宝宝性别"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />

            <ImageView
                android:id="@+id/image0100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/leftAndRight"
                android:src="@mipmap/right_big" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/viewBirthday"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight"
            android:background="@drawable/layout_selector_white_system_gray">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="出身年月"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/textBirthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/image0200"
                android:gravity="right"
                android:hint="请选择出身年月"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />

            <ImageView
                android:id="@+id/image0200"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/leftAndRight"
                android:src="@mipmap/right_big" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight">

            <TextView
                android:id="@+id/text0300"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="校区"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <EditText
                android:id="@+id/editSchool"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/text0300"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="填写宝宝校区"
                android:paddingRight="@dimen/leftAndRight"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight">

            <TextView
                android:id="@+id/text0400"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="邮箱"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <EditText
                android:id="@+id/editEmiel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/text0400"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="填写邮箱"
                android:inputType="textEmailAddress"
                android:paddingRight="@dimen/leftAndRight"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:id="@+id/viewGrade"
            android:background="@drawable/layout_selector_white_system_gray"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normalItemHeight">

            <TextView
                android:id="@+id/text0500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="年级"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/normal_textsize" />

            <TextView
                android:id="@+id/textGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/image0500"
                android:gravity="right"
                android:hint="请选择年级"
                android:textColor="@color/light_black"
                android:textSize="@dimen/normal_textsize" />

            <ImageView
                android:id="@+id/image0500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/leftAndRight"
                android:src="@mipmap/right_big" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginRight="@dimen/leftAndRight"
            android:background="@color/background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_marginTop="10dp"
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/leftAndRight"
                android:layout_marginLeft="@dimen/leftAndRight"
                android:text="我已经阅读并同意"
                android:textColor="@color/text_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/checkBox"
                android:layout_toRightOf="@+id/checkBox"
                android:text="《产品服务协议》" />

            <Button
                android:id="@+id/btnKaiShiCeShi"
                style="@style/bottomBtn"
                android:text="开始测试" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
