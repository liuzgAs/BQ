<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sxmoc.bq.activity.PdfActivity">
    <include
        android:id="@+id/includeBar"
        layout="@layout/view_bar_white"/>
    <RelativeLayout
        android:layout_below="@+id/includeBar"
        android:id="@+id/viewZhu"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/includeBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:background="@drawable/shape_tranblack_20dp"
            android:layout_width="wrap_content"
            android:text="左右滑动翻阅"
            android:textColor="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/leftAndRight"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</RelativeLayout>
