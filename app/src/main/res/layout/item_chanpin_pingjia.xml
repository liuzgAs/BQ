<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="@dimen/leftAndRight"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imageImg"
            android:text="Winner"
            android:textColor="@color/light_black"
            android:textSize="@dimen/bigText" />

        <com.iarcuschin.simpleratingbar.SimpleRatingBar
            android:id="@+id/ratingbar_pingfeng"
            app:srb_drawBorderEnabled="false"
            app:srb_fillColor="@color/basic_yellow"
            app:srb_isIndicator="true"
            app:srb_numberOfStars="5"
            app:srb_pressedFillColor="@color/basic_yellow"
            app:srb_rating="4"
            app:srb_starBackgroundColor="@color/text_gray"
            app:srb_starSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/leftAndRight"
            android:visibility="visible" />

    </RelativeLayout>


    <TextView
        android:id="@+id/textDes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="57dp"
        android:text="很先进，价格也很实在"
        android:textSize="@dimen/normal_textsize" />

    <LinearLayout
        android:id="@+id/viewImgs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textDes"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="57dp"
        android:layout_marginRight="57dp"
        android:orientation="horizontal">

        <com.sxmoc.bq.customview.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imagePic1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_empty" />
        </com.sxmoc.bq.customview.SquareLayout>

        <TextView
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.sxmoc.bq.customview.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imagePic2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_empty" />
        </com.sxmoc.bq.customview.SquareLayout>

        <TextView
            android:id="@+id/textView226"
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.sxmoc.bq.customview.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imagePic3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_empty" />
        </com.sxmoc.bq.customview.SquareLayout>

        <TextView
            android:id="@+id/textView227"
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.sxmoc.bq.customview.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imagePic4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_empty" />
        </com.sxmoc.bq.customview.SquareLayout>

        <TextView
            android:id="@+id/textView228"
            android:layout_width="6dp"
            android:layout_height="match_parent" />

        <com.sxmoc.bq.customview.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/imagePic5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_empty" />
        </com.sxmoc.bq.customview.SquareLayout>
    </LinearLayout>
</LinearLayout>