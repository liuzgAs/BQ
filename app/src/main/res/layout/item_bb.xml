<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray">
    <TextView
        android:text="刘大大"
        android:textSize="@dimen/normal_textsize"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/light_black"
        android:layout_width="wrap_content"
        android:id="@+id/textName"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/imageSex"
        android:layout_toRightOf="@+id/textName"
        android:src="@mipmap/nan"
        android:layout_width="15dp"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_height="15dp" />
    <TextView
        android:id="@+id/textTime"
        android:text="2015-12-23"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:textColor="@color/light_black"
        android:textSize="@dimen/normal_textsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textBianJi"
        android:paddingRight="@dimen/leftAndRight"
        android:layout_width="wrap_content"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/normal_textsize"
        android:text="编辑"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
</RelativeLayout>