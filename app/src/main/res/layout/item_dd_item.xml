<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_selector_white_system_gray">

    <ImageView
        android:id="@+id/imageImg"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textOrder"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/leftAndRight"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/querenimg" />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageImg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/leftAndRight"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageImg"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="大脑雷达智力测试仪"
        android:textColor="@color/light_black"
        android:textSize="@dimen/bigText" />

    <TextView
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageImg"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imageImg"
        android:text="¥2880"
        android:textColor="@color/basic_color"
        android:textSize="@dimen/MoreBigText" />

    <TextView
        android:id="@+id/textNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textPrice"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textPrice"
        android:text="×1"
        android:textColor="@color/light_black"
        android:textSize="@dimen/normal_textsize" />
</RelativeLayout>