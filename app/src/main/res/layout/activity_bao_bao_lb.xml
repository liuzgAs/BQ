<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.sxmoc.bq.activity.BaoBaoLBActivity">

    <LinearLayout
        android:id="@+id/viewBaoGaoLb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_bar_white" />

        <com.jude.easyrecyclerview.EasyRecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:layout_empty="@layout/view_empty"
            app:layout_progress="@layout/view_progress"
            app:scrollbarStyle="insideOverlay" />

        <Button
            android:id="@+id/btnXinZeng"
            style="@style/bottomBtn"
            android:text="新增宝宝" />
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/viewDaoJiShi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape_basic_jian_bian180">

        <ImageView
            android:id="@+id/imageDaoJiShi"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/daojishi3" />


    </RelativeLayout>
</RelativeLayout>
